<div class="timeline">
  <header class="timeline-header">
    <span class="tag is-medium is-primary"><%= Date.today.year %></span>
  </header>
  <% jobs.each do |job| %>
    <div class="timeline-item">
      <div class="timeline-marker"></div>
      <div class="timeline-content">
        <%= link_to job.url, target: '_blank' do %>
          <p class="heading"><%= job.company_name %></p>
        <% end %>
        <%= link_to job, style: 'color: inherit;' do %>
          <p class="heading"><%= job.position %></p>
          <p><%= job.short_description %></p>
          <hr>
          <p>
            <%= job.starting_date.strftime('%B %Y') %>
            -
            <%= job.ending_date&.strftime('%B %Y') || t('label.present') %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
  <header class="timeline-header">
    <span class="tag is-medium is-primary"><%= jobs.last.starting_date.year %></span>
  </header>
</div>